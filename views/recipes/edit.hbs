<h1>
    {{title}}
</h1>
<form method="POST">
    {{!-- Input names have to match the name of the fields in the mongo schema object --}}
    <fieldset>
        <label for="author" class="col-2">
            Author:
        </label>
        <input type="author" id="author" value="{{recipe.author}}"/>
    </fieldset>
    <fieldset>
        <label for="title" class="col-2">
            Title:
        </label>
        <input type="title" id="title" value="{{recipe.title}}"/>
    </fieldset>
    <fieldset>
        <label for="totalTime" class="col-2">
            Total Time:
        </label>
        <input type="totalTime" id="totalTime" value="{{recipe.totalTime}}"/>
    </fieldset>
    <fieldset>
        <label for="img" class="col-2">
            Image:
        </label>
        {{!-- <input type="img" id="img" required value="{{recipe.img}}"/> --}}
    </fieldset>
    <fieldset>
        <label for="cookTime" class="col-2">
            Cook Time:
        </label>
        <input type="cookTime" id="cookTime" value="{{recipe.cookTime}}"/>
    </fieldset>
    <fieldset>
        <label for="servings" class="col-2">
            Servings:
        </label>
        <input type="servings" id="servings" value="{{recipe.servings}}"/>
    </fieldset>
    <fieldset>
        <label for="ingredients" class="col-2">
            Ingredients:
        </label>
        <input type="ingredients" id="ingredients" value="{{recipe.ingredients}}"/>
    </fieldset>
    <fieldset>
        <label for="title" class="col-2">
            Title:
        </label>
        <input type="title" id="title" value="{{recipe.title}}"/>
    </fieldset>
    <fieldset>
        <label for="steps" class="col-2">
            Steps:
        </label>
        <input type="steps" id="steps" value="{{recipe.steps}}"/>
    </fieldset>
    <fieldset>
        <label for="rating" class="col-2">
            Rating:
        </label>
        <input type="rating" id="rating" value="{{recipe.rating}}"/>
    </fieldset>
    <fieldset>
        <label for="tags" class="col-2">
            Tags:
        </label>
        <input type="tags" id="tags" required value="{{recipe.tags}}"/>
    </fieldset>
    <fieldset>
    <button class="btn btn-info offset-3">
      Save
    </button>
  </fieldset>
</form>
