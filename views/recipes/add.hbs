{{!-- Put a forum to the add / create recipes in here  --}}
<h1>
  Add a recipe
</h1>
<form method="post">
  <fieldset class="form-group">
    <label for="author" class="col-2 control-label">
      Recipe Author:
    </label>
    <input
      name="author"
      id="author"
      required
    />
  </fieldset>
  <fieldset class="form-group">
    <label for="title" class="col-2 control-label">
      Recipe Title: 
    </label>
    <input
      name="title"
      id="title"
      required
    />
  </fieldset>
  <fieldset class="form-group">
    <label for="totalTime" class="col-2 control-label">
      Total Recipe Time:
    </label>
    <select name="totalTime" id="totalTime" required>
        <option value="">Pick a time</option>
        <option value="20">20 minutes</option>
        <option value="30">30 minutes</option>
        <option value="45">45 minutes</option>
        <option value="1">1+ hour</option>
    </select>
  </fieldset>
  <fieldset class="form-group">
    <label for="img" class="col-2 control-label">
      Image:
    </label>
    <input
      name="img"
      id="img"
    />
  </fieldset>
  <fieldset class="form-group">
    <label for="cookTime" class="col-2 control-label">
      Cook Time:
    </label>
    <select name="cookTime" id="cookTime" required>
        <option value="">Pick a time</option>
        <option value="20">20 minutes</option>
        <option value="30">30 minutes</option>
        <option value="45">45 minutes</option>
        <option value="1">1+ hour</option>
    </select>
  </fieldset>
  <fieldset class="form-group">
    <label for="servings" class="col-2 control-label">
      Servings:
    </label>
    <input
      name="servings"
      id="servings"
      required
    />
  </fieldset>
  <fieldset class="form-group">
    <label for="ingredients" class="col-2 control-label">
      Ingredients:
    </label>
    <input
      name="ingredients"
      id="ingredients"
      required
    />
  </fieldset>
  <fieldset class="form-group">
    <label for="steps" class="col-2 control-label">
      Steps:
    </label>
    <input
      name="steps"
      id="steps"
      required
    />
  </fieldset>
 
  <fieldset class="form-group">
    <label for="tags" class="col-2 control-label">
      Tags:
    </label>
    <input hidden
      name="tags"
      id="tags"
      required
    />
    <input type="checkbox" name="recipe" value="breakfast" onchange="chkbox(this)" />Breakfast 
    <input type="checkbox" name="recipe" value="lunch" onchange="chkbox(this)" />Lunch
    <input type="checkbox" name="recipe" value="dinner" onchange="chkbox(this)" />Dinner
    <input type="checkbox" name="recipe" value="dessert" onchange="chkbox(this)" />Dessert
   <script>
      var d = new Array();
      function chkbox(this1) {
        var s = this1.value;
        if (this1.checked) {
          d.push(s);
        } else {
          var index = d.indexOf(s);
          if (index > -1) {
            d.splice(index, 1);
          }
        }
        var arr = d.join(', '); // making it readable by adding a space
        let myJSON = arr.toString(); // turning the array into a string
        document.getElementById("tags").value = myJSON; // setting the string to a hidden field to pass through to db. 
      }
   </script>
  </fieldset>
 
  <fieldset class="form-group">
    <label for="rating" class="col-2 control-label">
      Rating:
    </label>
    <input
      name="rating"
      id="rating"
      value="{{recipe.rating}}"
    />
  </fieldset>
    
  <fieldset class="form-group">
    <button class="btn btn-info offset-3">
      Add Recipe
    </button>
  </fieldset>
</form>
