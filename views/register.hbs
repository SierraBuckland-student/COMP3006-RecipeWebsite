<div class="container">
<h1>
  Register
</h1>
<form method="post">
  <fieldset class="form-group">
    <label for="username" class="col-2 control-label">
      Username: *
    </label>
    <input
      name="username"
      id="username"
      required
      type="email"
      placeholder="email@email.com"
    />
  </fieldset>
  <fieldset class="form-group">
    <label for="password" class="col-2 control-label">
      Password: *
    </label>
    <p>Minimum eight characters, at least one uppercase letter and one number</p>
    <input
      name="password"
      id="password"
      type="password"
      required
      pattern="^(?=.*[A-Za-z])(?=.*\d)[A-Za-z\d]{8,}$"
    />
  </fieldset>
  <fieldset class="form-group">
    <label for="confirm" class="col-2 control-label">
      Confirm: *
    </label>
    <input
      name="confirm"
      id="confirm"
      type="password"
      required
      pattern="^(?=.*[A-Za-z])(?=.*\d)[A-Za-z\d]{8,}$"
    />
  </fieldset>
  <fieldset class="form-group">
    <button class="btn btn-info offset-3">
      Register
    </button>
    <hr />
    Already have an account?
    <a href="/login" title="login">
      Login
    </a>
  </fieldset>
</form>
</div>